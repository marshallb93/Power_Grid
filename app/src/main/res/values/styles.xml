<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Style for the phase title -->
    <style name="Phase">
        <item name="android:textColor">#2d2d2d</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Style for the action description -->
    <style name="Action">
        <item name="android:textColor">#091100</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <!-- Style for description boxes -->
    <style name="Box">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/description_box</item>
    </style>

</resources>
